<Window x:Class="chat_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chat_client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="message" HorizontalAlignment="Center" Margin="0,312,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="780"/>
        <Button Name="Button_send" Content="send" HorizontalAlignment="Left" Margin="345,335,0,0" VerticalAlignment="Top" Width="71" Click="Button_send_Click"/>
    </Grid>
</Window>
